<h2>Withdraw Money</h2>

{{#if error}}
<div class="error">{{error}}</div>
{{/if}}

{{#if success}}
<div class="success">{{success}}</div>
{{/if}}

{{#if accounts.length}}
<form method="POST" action="/withdraw">
    <div class="form-group">
        <label for="accountId">Select Account:</label>
        <select id="accountId" name="accountId" required>
            <option value="">-- Select an account --</option>
            {{#each accounts}}
            <option value="{{this.id}}">
                {{this.accountType}} - Account #{{this.id}} (Balance: ${{this.balance}})
            </option>
            {{/each}}
        </select>
    </div>
    
    <div class="form-group">
        <label for="amount">Withdrawal Amount:</label>
        <input type="number" id="amount" name="amount" step="0.01" min="0.01" required placeholder="0.00">
    </div>
    
    <button type="submit">Withdraw</button>
</form>

{{else}}
<div class="info-box">
    <p>You don't have any accounts yet. <a href="/openaccount">Open an account</a> to get started!</p>
</div>
{{/if}}

